{
  "extends": "markdownlint/style/relaxed",
  "no-hard-tabs": true,
  "no-trailing-spaces": true,
  "no-trailing-punctuation": false,
  "list-indent": true,
  "ul-indent": {
    "indent": 2
  },
  "line-length": {
    "line_length": 120,
    "heading_line_length": 120,
    "header_line_length": 120,
    "code_line_length": 120,
    "code_block_line_length": 120
  },
  "md003": {
    "style": "consistent"
  },
  "md004": {
    "style": "consistent"
  },
  "md013": false,
  "md024": {
    "siblings_only": true
  }
}

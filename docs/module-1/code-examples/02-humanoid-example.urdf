<?xml version="1.0"?>
<robot name="simple_humanoid">
  <!-- Base link (torso/trunk) -->
  <link name="base_link">
    <inertial>
      <mass value="10.0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <!-- Head link -->
  <link name="head">
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Left arm links -->
  <link name="left_shoulder">
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.005" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005"/>
    </inertial>
  </link>

  <link name="left_elbow">
    <inertial>
      <mass value="0.8"/>
      <inertia ixx="0.004" ixy="0.0" ixz="0.0" iyy="0.004" iyz="0.0" izz="0.004"/>
    </inertial>
  </link>

  <link name="left_hand">
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.002"/>
    </inertial>
  </link>

  <!-- Right arm links -->
  <link name="right_shoulder">
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.005" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005"/>
    </inertial>
  </link>

  <link name="right_elbow">
    <inertial>
      <mass value="0.8"/>
      <inertia ixx="0.004" ixy="0.0" ixz="0.0" iyy="0.004" iyz="0.0" izz="0.004"/>
    </inertial>
  </link>

  <link name="right_hand">
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.002"/>
    </inertial>
  </link>

  <!-- Left leg links -->
  <link name="left_hip">
    <inertial>
      <mass value="1.5"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <link name="left_knee">
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.008" ixy="0.0" ixz="0.0" iyy="0.008" iyz="0.0" izz="0.008"/>
    </inertial>
  </link>

  <link name="left_foot">
    <inertial>
      <mass value="0.7"/>
      <inertia ixx="0.005" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005"/>
    </inertial>
  </link>

  <!-- Right leg links -->
  <link name="right_hip">
    <inertial>
      <mass value="1.5"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <link name="right_knee">
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.008" ixy="0.0" ixz="0.0" iyy="0.008" iyz="0.0" izz="0.008"/>
    </inertial>
  </link>

  <link name="right_foot">
    <inertial>
      <mass value="0.7"/>
      <inertia ixx="0.005" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005"/>
    </inertial>
  </link>

  <!-- Joints connecting links -->

  <!-- Head joint -->
  <joint name="head_joint" type="revolute">
    <parent link="base_link"/>
    <child link="head"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1"/>
  </joint>

  <!-- Left arm joints -->
  <joint name="left_shoulder_pitch" type="revolute">
    <parent link="base_link"/>
    <child link="left_shoulder"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.57" upper="1.57" effort="30" velocity="1"/>
  </joint>

  <joint name="left_elbow" type="revolute">
    <parent link="left_shoulder"/>
    <child link="left_elbow"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="2.0" effort="20" velocity="1"/>
  </joint>

  <joint name="left_wrist" type="revolute">
    <parent link="left_elbow"/>
    <child link="left_hand"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.0" upper="1.0" effort="10" velocity="1"/>
  </joint>

  <!-- Right arm joints -->
  <joint name="right_shoulder_pitch" type="revolute">
    <parent link="base_link"/>
    <child link="right_shoulder"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.57" upper="1.57" effort="30" velocity="1"/>
  </joint>

  <joint name="right_elbow" type="revolute">
    <parent link="right_shoulder"/>
    <child link="right_elbow"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="2.0" effort="20" velocity="1"/>
  </joint>

  <joint name="right_wrist" type="revolute">
    <parent link="right_elbow"/>
    <child link="right_hand"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.0" upper="1.0" effort="10" velocity="1"/>
  </joint>

  <!-- Left leg joints -->
  <joint name="left_hip_pitch" type="revolute">
    <parent link="base_link"/>
    <child link="left_hip"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.57" upper="1.57" effort="50" velocity="1"/>
  </joint>

  <joint name="left_knee" type="revolute">
    <parent link="left_hip"/>
    <child link="left_knee"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="2.0" effort="50" velocity="1"/>
  </joint>

  <joint name="left_ankle" type="revolute">
    <parent link="left_knee"/>
    <child link="left_foot"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.5" upper="0.5" effort="30" velocity="1"/>
  </joint>

  <!-- Right leg joints -->
  <joint name="right_hip_pitch" type="revolute">
    <parent link="base_link"/>
    <child link="right_hip"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.57" upper="1.57" effort="50" velocity="1"/>
  </joint>

  <joint name="right_knee" type="revolute">
    <parent link="right_hip"/>
    <child link="right_knee"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="2.0" effort="50" velocity="1"/>
  </joint>

  <joint name="right_ankle" type="revolute">
    <parent link="right_knee"/>
    <child link="right_foot"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.5" upper="0.5" effort="30" velocity="1"/>
  </joint>

</robot>
